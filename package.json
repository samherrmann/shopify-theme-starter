{
  "scripts": {
    "start": "concurrently \"npm run theme:watch\" \"npm run browser-sync\"",
    "theme": "dotenv shopify-themekit -- --config themekit.yml",
    "theme:watch": "npm run theme watch -- --notify .theme.update",
    "browser-sync": "dotenv node browser-sync.js"
  },
  "devDependencies": {
    "@shopify/themekit": "^1.1.3",
    "browser-sync": "^2.26.7",
    "concurrently": "^5.1.0",
    "dotenv-cli": "^3.1.0"
  }
}
